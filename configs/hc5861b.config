# ===========================================================
# ImmortalWrt 23.05 — 极路由3 Pro (HC5861B / R33)
#
# CPU:     MT7620A  单核 580MHz  mipsel_24kc
# RAM:     128MB DDR2
# Flash:   128MB NAND
# Switch:  RTL8367RB
# WiFi:    MT7620A (2.4G) + MT7612EN (5G)
#
# ★ 使用 ImmortalWrt（官方 OpenWrt 无此设备）
# ★ 设备 ID 以 ImmortalWrt 中实际定义为准
#   如果 ImmortalWrt 中是 hiwifi_hc5861b 就用 hc5861b
#   如果是 hiwifi_hc5861 就改为 hc5861
#   验证步骤会自动检测并报告
# ===========================================================

# -----------------------------------------------------------
# 1. Target + Device
# -----------------------------------------------------------
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7620=y
# ★ 优先尝试 hc5861b，如验证步骤发现不存在会报错提示
CONFIG_TARGET_DEVICE_ramips_mt7620_DEVICE_hiwifi_hc5861b=y

# -----------------------------------------------------------
# 2. LuCI 界面
# -----------------------------------------------------------
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_luci-lib-ipkg=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-firewall-zh-cn=y
CONFIG_PACKAGE_luci-i18n-opkg-zh-cn=y

# -----------------------------------------------------------
# 3. ★ Passwall2
# -----------------------------------------------------------
CONFIG_PACKAGE_luci-app-passwall2=y
CONFIG_PACKAGE_luci-i18n-passwall2-zh-cn=y

CONFIG_PACKAGE_luci-app-passwall2_Transparent_Proxy=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_Hysteria=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_SingBox=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_Haproxy=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_IPv6_Nat=y

# -----------------------------------------------------------
# 4. ★ 代理核心
# -----------------------------------------------------------
# Hysteria2 独立客户端（首选，轻量）
CONFIG_PACKAGE_hysteria=y

# SingBox 备选（含 QUIC 支持 Hysteria2）
CONFIG_PACKAGE_sing-box=y
CONFIG_SING_BOX_WITH_QUIC=y
CONFIG_SING_BOX_WITH_UTLS=y

# 不要 Xray（不支持 Hysteria2，浪费资源）
# CONFIG_PACKAGE_xray-core is not set

# -----------------------------------------------------------
# 5. ★ 透明代理依赖
# -----------------------------------------------------------
CONFIG_PACKAGE_chinadns-ng=y
CONFIG_PACKAGE_dns2socks=y
CONFIG_PACKAGE_dns2tcp=y

# TPROXY（UDP 透明代理必须）
CONFIG_PACKAGE_ipt2socks=y
CONFIG_PACKAGE_iptables-mod-tproxy=y
CONFIG_PACKAGE_kmod-ipt-tproxy=y

CONFIG_PACKAGE_ip6tables-mod-nat=y
CONFIG_PACKAGE_ipset=y
CONFIG_PACKAGE_ip-full=y

CONFIG_PACKAGE_microsocks=y
CONFIG_PACKAGE_tcping=y
CONFIG_PACKAGE_haproxy=y
CONFIG_PACKAGE_coreutils=y
CONFIG_PACKAGE_coreutils-base64=y
CONFIG_PACKAGE_coreutils-nohup=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget-ssl=y
CONFIG_PACKAGE_ca-certificates=y
CONFIG_PACKAGE_resolveip=y
CONFIG_PACKAGE_unzip=y

# -----------------------------------------------------------
# 6. ★ 内存优化
# -----------------------------------------------------------
CONFIG_PACKAGE_zram-swap=y
CONFIG_PACKAGE_kmod-zram=y
CONFIG_PACKAGE_kmod-lib-lzo=y
CONFIG_PACKAGE_kmod-lib-lz4=y

# -----------------------------------------------------------
# 7. IPv6
# -----------------------------------------------------------
CONFIG_PACKAGE_ipv6helper=y
CONFIG_PACKAGE_ip6tables=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y

# -----------------------------------------------------------
# 8. 无线
# -----------------------------------------------------------
CONFIG_PACKAGE_kmod-mt76x2=y
CONFIG_PACKAGE_wpad-basic-mbedtls=y

# -----------------------------------------------------------
# 9. USB 2.0
# -----------------------------------------------------------
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb-ohci=y
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_block-mount=y

# -----------------------------------------------------------
# 10. 工具
# -----------------------------------------------------------
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_nano=y

# -----------------------------------------------------------
# 11. 附加应用
# -----------------------------------------------------------
CONFIG_PACKAGE_luci-app-upnp=y
CONFIG_PACKAGE_luci-i18n-upnp-zh-cn=y
